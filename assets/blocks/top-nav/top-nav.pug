      // ------------------------------ 
      // Recall button & telefon number 
      // ------------------------------ 
      .top-nav-recall(onclick="document.getElementById('id01').style.display='block'")
        .top-nav-recall-wrap
          .top-nav-recall__btn Заказать звонок
          .top-nav-recall__tel 8 (991) 021-22-60
      // ---------- 
      // Modal form 
      // ---------- 
      #id01.recall.modal
        form.recall-form(action="assets/php/action.php" method="post" name="recall-form")
          span.recall-form__close-btn(onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal") &times;
          .recall-form-container
            label.recall-form__input-name(for="name") Ваше имя
            input.recall-form__input(type="text" id="name" name="name" minlength="2" maxlength="20" pattern="^[а-яА-ЯёЁa-zA-Z]{1,20}$" placeholder="Ваше имя" onkeypress="noDigits(event)" required)
            label.recall-form__input-name(for="phone") Введите номер телефона
            input.recall-form__input(type="tel" id="phone" name="phone" pattern="^((8|\+7)[\- ]?)?(\(?\d{3}\)?[\- ]?)?[\d\- ]{7,10}$" minlength="20" maxlength="20" placeholder="+7 (999) 999-99-99" required)
            label.recall-form__input-name(for="message") Сообщение
            textarea.recall-form__textarea(type="textarea" name="message")
            button.btn.recall-form__btn(type="submit" onclick="document.getElementById('sendform').style.display = 'block'") Заказать звонок
